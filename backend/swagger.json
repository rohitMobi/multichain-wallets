      "GrantAccess": {
        "required": ["address", "type"],
        "properties": {
          "grant_revoke": {
            "type": "string"
          },
          "address": {
            "type": "string"
          },
          "type": {
            "type": "string"
          }
        },
        "example": {
          "grant_revoke": "grant",
          "address": "1GhnrnZhMwtSFetWETKoRzsJ9hzrQ4Jj1n7f1R",
          "type": "issue"
        }
      },
      "PublishItem": {
        "required": ["name", "key", "value"],
        "properties": {
          "name": {
            "type": "string"
          },
          "key": {
            "type": "string"
          },
          "value": {
            "type": "object"
          }
        },
        "example": {
          "name": "Stream1",
          "key": "Section Name",
          "value": {
            "json": { "name" : "Computer" } 
          }
        }
      },
      "CreateAssets": {
        "required": ["address", "assetsName", "quantity", "smallestUnit"],
        "properties": {
          "address": {
            "type": "string"
          },
          "assetsName": {
            "type": "string"
          },
          "quantity": {
            "type": "string"
          },
          "smallestUnit": {
            "type": "string"
          }
        },
        "example": {
          "address": "18NAjmzfDTJWbNSebGyipKKBPXrtbJimJpTqis",
          "assetsName": "ZTK",
          "quantity": "1000",
          "smallestUnit": "0.01"
        }
      },
      "TransferToken": {
        "required": ["address", "assetsName", "quantity"],
        "properties": {
          "address": {
            "type": "string"
          },
          "assetsName": {
            "type": "string"
          },
          "quantity": {
            "type": "string"
          }
        },
        "example": {
          "address": "1DzvuGqfHz9poTXCjF9K4r5eTxgskSm6doBWfr",
          "assetsName": "ZTK",
          "quantity": "50"
        }
      },
      "CreateStream": {
        "required": ["name"],
        "properties": {
          "name": {
            "type": "string"
          }
        },
        "example": {
          "name": "Stream1"
        }
      }
    },
